<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_heavy_equipment_form" model="ir.ui.view">
        <field name="name">heavy.equipment.form</field>
        <field name="model">heavy.equipment</field>
        <field name="arch" type="xml">
            <form string="Heavy Equipment">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="operational,maintenance,breakdown,standby"/>
                </header>
                <sheet>
                    <group>
                        <group string="Equipment Information">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="equipment_type"/>
                            <field name="status"/>
                        </group>
                        <group string="Details">
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="site_id"/>
                            <field name="operator_id"/>
                        </group>
                    </group>
                    <group string="Maintenance">
                        <field name="last_maintenance"/>
                        <field name="next_maintenance"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_heavy_equipment_tree" model="ir.ui.view">
        <field name="name">heavy.equipment.tree</field>
        <field name="model">heavy.equipment</field>
        <field name="arch" type="xml">
            <tree string="Heavy Equipment">
                <field name="code"/>
                <field name="name"/>
                <field name="equipment_type"/>
                <field name="brand"/>
                <field name="site_id"/>
                <field name="operator_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="action_heavy_equipment" model="ir.actions.act_window">
        <field name="name">Heavy Equipment</field>
        <field name="res_model">heavy.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>